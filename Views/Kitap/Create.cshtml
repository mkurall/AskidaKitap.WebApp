@model AskidaKitap.WebApp.Models.Kitap

@{
    ViewData["Title"] = "Yeni Kitap Ekle";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Yeni Kitap Ekle</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Geri Dön
        </a>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="mb-3">
                    <label asp-for="Ad" class="form-label"></label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Yazar" class="form-label"></label>
                    <input asp-for="Yazar" class="form-control" />
                    <span asp-validation-for="Yazar" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SayfaSayisi" class="form-label"></label>
                    <input asp-for="SayfaSayisi" class="form-control" type="number" min="1" />
                    <span asp-validation-for="SayfaSayisi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StokAdedi" class="form-label"></label>
                    <input asp-for="StokAdedi" class="form-control" type="number" min="0" />
                    <span asp-validation-for="StokAdedi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="KitapKategoriId" class="form-label"></label>
                    <select asp-for="KitapKategoriId" class="form-select" asp-items="ViewBag.Kategoriler">
                        <option value="">-- Kategori Seçin --</option>
                    </select>
                    <span asp-validation-for="KitapKategoriId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 