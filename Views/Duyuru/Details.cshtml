@model AskidaKitap.WebApp.Models.Duyuru

@{
    ViewData["Title"] = "Duyuru Detayları";
}

<div class="container mt-4">
    <h1>Duyuru Detayları</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Baslik</h5>
            <p class="card-text">@Model.Icerik</p>
            <div class="text-muted small">
                <div>Oluşturulma: @Model.OlusturulmaTarihi.ToString("dd.MM.yyyy HH:mm")</div>
                @if (Model.GuncellemeTarihi.HasValue)
                {
                    <div>Son Güncelleme: @Model.GuncellemeTarihi.Value.ToString("dd.MM.yyyy HH:mm")</div>
                }
            </div>
        </div>
        <div class="card-footer bg-transparent">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Düzenle
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>
    </div>
</div> 