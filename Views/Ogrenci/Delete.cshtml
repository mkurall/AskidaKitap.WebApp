@model AskidaKitap.WebApp.Models.Ogrenci

@{
    ViewData["Title"] = "Öğrenci Sil";
}

<div class="container">
    <h2>Öğrenci Sil</h2>

    <div class="alert alert-danger">
        <h4>Bu öğrenciyi silmek istediğinizden emin misiniz?</h4>
        <p>Bu işlem geri alınamaz!</p>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Öğrenci Bilgileri</h5>
            <dl class="row">
                <dt class="col-sm-3">Ad Soyad</dt>
                <dd class="col-sm-9">@Model.Ad @Model.Soyad</dd>

                <dt class="col-sm-3">E-posta</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Öğrenci No</dt>
                <dd class="col-sm-9">@Model.OgrenciNo</dd>

                <dt class="col-sm-3">Sınıf</dt>
                <dd class="col-sm-9">@ViewBag.SinifAdi</dd>

                <dt class="col-sm-3">Durum</dt>
                <dd class="col-sm-9">
                    @if (Model.AktifMi)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                </dd>

                <dt class="col-sm-3">Onay Durumu</dt>
                <dd class="col-sm-9">
                    @if (Model.OnayDurumu)
                    {
                        <span class="badge bg-success">Onaylı</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Onay Bekliyor</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div> 